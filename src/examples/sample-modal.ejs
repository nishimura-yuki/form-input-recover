<% const title = 'Sample Using Preset Modal.' %>
<% const individualContent = ` 
  <div id="form-input-recover-confirm-modal"></div>
`; %>
<% const individualScript = `
// クエリストリングに lang の値が指定されている場合は使用する
var url = window.location.search;
var hash  = url.slice(1).split('&');    
var max = hash.length;
var lang = '';
for (var i = 0; i < max; i++) {
  array = hash[i].split('=');
  if(array.length > 1 && array[0] === 'lang'){
    lang = array[1];
    break;
  }
}

// 第二引数ありの場合はモーダルでの確認が発生
FormInputRecover.executeInputRecover(
  {
    expiredHour: 1
  },
  {
    elementId: 'form-input-recover-confirm-modal',
    lang: lang,
  }
);
`; %>
<%- include('./layout.ejs', { title, individualContent , individualScript } ); %>
